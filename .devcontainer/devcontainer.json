{
  "name": "ansible-dev",
  "dockerFile": "Dockerfile",
  "context": "..",
  "remoteUser": "ansible",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "mounts": [
    "type=bind,source=${env:HOME}/.ssh/id_rsa_ansible,target=/ansible/.ssh/id_rsa"
  ],
  "runArgs": ["-h", "ansible-dev"],
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "hashicorp.hcl",
        "redhat.ansible"
      ]
    }
  }
}